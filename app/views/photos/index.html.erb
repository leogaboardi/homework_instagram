<h1>List of Photos</h1>

<% @list_of_photos.each do |photo| %>
  <div class="row" style = "margin-bottom: 30px">
    <div class="col-md-8">
        <img class="img-responsive" src="<%= photo.source %>" width="80">
      <div class="caption">
        <%= photo.caption %>
      </div>
        <a class="btn btn-success" href="http://localhost:3000/photo_details/<%= photo.id %>">Show</a>

        <a class="btn btn-warning" href="http://localhost:3000/edit_photo_form/<%= photo.id %>">Edit</a>

        <a class="btn btn-danger" href="http://localhost:3000/delete_photo/<%= photo.id %>">Delete</a>
    </div>
  </div>
<% end %>
